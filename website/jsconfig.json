{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components/index.mjs"],
      // "@elements/*": ["src/elements/*"],
      // "@elements": ["src/elements/index.mjs"],
      "@layouts/*": ["src/layouts/*"],
      "@layouts": ["src/layouts/index.mjs"],
      "@pages/*": ["src/pages/*"],
      // "@partials/*": ["src/partials/*"],
      // "@partials": ["src/partials/index.mjs"],
      "@services/*": ["src/services/*"],
      "@services": ["src/services/index.mjs"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils/index.mjs"],
      "@public/*": ["public/*"],
      "@poko": ["src/_data/poko.json"]
    }
  }
}
